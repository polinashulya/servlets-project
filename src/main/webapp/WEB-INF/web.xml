<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <error-page>
        <location>/error_page.jsp</location>
    </error-page>


    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.example.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>users</servlet-name>
        <jsp-file>/WEB-INF/users.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adding_form</servlet-name>
        <jsp-file>/WEB-INF/add_user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>adding_form</servlet-name>
        <url-pattern>/adding_form</url-pattern>
    </servlet-mapping>

</web-app>